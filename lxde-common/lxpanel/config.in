# CPU monitor
Plugin {
    type = cpu
}


# Digital Clock
Plugin {
    type = dclock
    config {
        ClockFmt = %R
        TooltipFmt = %A %x
        Action = xmessage Please define some command &
        BoldFont = false
    }
}

